<Page x:Class="wpf_dotnet.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="50,0">
			<TextBlock Text="S’identifier" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

			<TextBlock Text="Nom d'utilisateur" Margin="0,0,0,5"/>
			<Border CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,20">
				<TextBox Name="UsernameTextBox" BorderThickness="0" Background="Transparent" Padding="8,12,8,12"/>
			</Border>

			<TextBlock Text="Mot de passe" Margin="0,0,0,5"/>

			<Border CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,20">
				<PasswordBox Name="PasswordBox" BorderThickness="0" Background="Transparent" Padding="8,12,8,12"/>
			</Border>

			<Button Content="S’identifier" Height="40" Background="#88AACF" Foreground="White" Margin="0,0,0,10" Cursor="Hand" Click="HandleRegisterButton">
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border
							Height="40"
							CornerRadius="4"
							Background="{TemplateBinding Background}"
						>
							<ContentPresenter
								VerticalAlignment="Center"
								HorizontalAlignment="Center"
							/>
						</Border>
					</ControlTemplate>
				</Button.Template>
			</Button>
			
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Pas de compte ? " Margin="0,0,5,0"/>
				<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
					<Hyperlink Foreground="#88AACF" Click="GoToLogin">
						Se connecter
					</Hyperlink>
				</TextBlock>
			</StackPanel>
		</StackPanel>

		<Rectangle Grid.Column="1" Fill="#88AACF"/>
	</Grid>
</Page>
